while ! ping -c 1 -W 1 google.com; do echo Waiting for Internet; sleep 1; done; echo Waiting for 5 more seconds; sleep 5; PKG=$(ls -1 ~/AquilaUAV_pc/installing_queue/ | grep .sh | head -1); if [ -z $PKG ]; then rm -rf ~/.config/autostart/AquilaUAV_installation.desktop; rm -rf ~/AquilaUAV_pc/installing_queue; exit; fi; bash ~/AquilaUAV_pc/installing_queue/$PKG; rm -rf ~/AquilaUAV_pc/installing_queue/$PKG; sudo reboot
